<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.DetailsProduct_Fragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rel_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize">

                    <ImageButton
                        android:id="@+id/back_btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/back_arrow"
                        android:layout_margin="10dp"
                        android:scaleType="fitXY" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/item_img"
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:src="@drawable/home_1"
                            android:scaleType="fitXY" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:layout_marginTop="30dp">

                            <RelativeLayout
                                android:layout_below="@+id/item_img"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp">

                                <TextView
                                    android:id="@+id/product_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Country house"
                                    android:textSize="18sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2 Rooms | 2 Baths  | 250 mt2"
                                    android:textSize="16sp"
                                    android:layout_alignParentEnd="true" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/product_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nasr City -7th distract ,  Cairo"
                                android:textColor="@color/black"
                                android:textSize="22sp"
                                android:layout_marginBottom="10dp" />

                            <TextView
                                android:id="@+id/product_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1.450.000 "
                                android:textColor="#30A41D"
                                android:textSize="22sp"
                                android:layout_marginBottom="10dp" />
                        </LinearLayout>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/back_discount_rel"
                        android:padding="5dp"
                        android:layout_alignParentStart="true"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20% Discount"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/circle_white_bac"
                        android:visibility="gone">

                        <ImageButton
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/favorite_btn"
                            android:src="@drawable/favourite_selection"
                            android:background="#00ffffff"

                            />

                    </RelativeLayout>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>