<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/radio_selected_back">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:background="@drawable/radio_selected_back"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_selected_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_selected_back"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_img"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/home_1"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <RelativeLayout
                        android:layout_below="@+id/item_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/txt_item_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Country house"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1.450.000 EGP"
                        android:textColor="#30A41D"
                        android:textSize="20sp"
                        android:layout_marginBottom="10dp"
                        />

                    <TextView
                        android:id="@+id/txt_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nasr City -7th distract ,  Cairo"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginBottom="10dp"
                        />
                </LinearLayout>



            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_discount_rel"
                android:padding="5dp"
                android:layout_alignParentStart="true"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20% Discount"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:background="@drawable/circle_white_bac"
                android:visibility="gone"
                >

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/favorite_btn"
                    android:src="@drawable/favourite_selection"
                    android:background="#00ffffff"

                    />

            </RelativeLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>